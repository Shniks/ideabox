<%= stylesheet_link_tag "index_show" %>
<table>
  <td><h3 class="idea-main-title"> List of Categories </h3></td>
  <td><span class="add-idea-label" title="Add a New Category"><%= link_to image_tag("nc_icon.png", height: 50, width: 50), new_category_path %></td>
</table>
<table>
  <% @categories.each do |category| %>
    <tr class=category_<%= category.id %>>
      <td class="info-2"><%= category.name %></td>
      <td class="delete-icon" title="Delete this Category"><%= link_to image_tag("delete.png", height: 20, width: 20), category_path(category.id), method: "delete" %></td>
    </tr>
  <% end %>
</table>
