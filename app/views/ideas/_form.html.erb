<%= stylesheet_link_tag "create_edit" %>
<%= form_for @idea do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :category %>
  <%= f.collection_select(:category_id, Category.all, :id, :name) %>

  <%= f.submit %>
<% end %>
