<%= stylesheet_link_tag "index_show" %>
<table>
  <td><h3 class="idea-main-title"> List of Images </h3></td>
  <td class="add-image-label" ><p title="Create a New Image"><%= link_to image_tag("new_image.png", height: 65, width: 65), new_image_path %></p></td>
</table>
<% @images.each do |image| %>
  <tr class=image_<%= image.id %>>
  <table class="index-ideas-list-title">
    <td><h3 class="idea-main-title-index"><%= image.name %></h3></td>
    <td class="image-title-icon"><p title="Delete this Image"><%= link_to image_tag("delete.png", height: 27, width: 27), image_path(image.id), method: "delete" %></p></td>
  </table>
  <hr/>
  <section class="idea-images">
    <article>
      <img class="idea-images" src="<%= image.url  %>" alt="<%= image.name %>"/>
    </article>
  </section>
<% end %>
