<!DOCTYPE html>
<html>
  <head>
    <title>Ideabox</title>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <header class="main-header">
    <a href="/"><%= image_tag 'ideabox1.png', :class => "main-logo"%></a>
    </header>
    <div class="navbar">
      <nav id="main_nav">
        <% if current_admin? %>
          <div class="dropdown">
            <a class="dropbtn">Ideas
              <i class="fa fa-caret-down"></i>
            </a>
            <div class="dropdown-content">
              <a href="/ideas/new">Create New Idea</a>
              <a href="/ideas">List All Ideas</a>
            </div>
          </div>
          <div class="dropdown">
            <a class="dropbtn">Categories
              <i class="fa fa-caret-down"></i>
            </a>
            <div class="dropdown-content">
              <a href="/categories/new">Create New Category</a>
              <a href="/categories">List All Categories</a>
            </div>
          </div>
          <div class="dropdown">
            <a class="dropbtn">Images
              <i class="fa fa-caret-down"></i>
            </a>
            <div class="dropdown-content">
              <a href="/images/new">Create New Image</a>
              <a href="/images">List All Images</a>
            </div>
          </div>
          <section class="admin">
            <%= image_tag 'person-1.png', :class => "admin-logo" %>
            <%= link_to "Log Out", logout_path %>
          </section>
        <% elsif current_user  %>
          <div class="dropdown">
            <a class="dropbtn">My IdeaBox
              <i class="fa fa-caret-down"></i>
            </a>
            <div class="dropdown-content">
              <a href="/ideas/new">Create New Idea</a>
              <a href="/ideas">List All Ideas</a>
            </div>
          </div>
          <section class="admin">
            <%= image_tag 'person-1.png', :class => "admin-logo" %>
            <%= link_to "Log Out", logout_path %>
          </section>
        <% else %>
            <section class="admin">
              <%= image_tag 'register.png', :class => "register-logo" %>
              <%= link_to "Sign Up", new_user_path %>
              <%= image_tag 'person-1.png', :class => "admin-logo" %>
              <%= link_to "Log In", login_path %>
            </section>
        <% end %>
        </div>
      </nav>
    </div>
    <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, class: name %>
    <% end %>
    <%= yield %>
  </body>
</html>
