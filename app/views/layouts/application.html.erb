<!DOCTYPE html>
<html>
  <head>
    <title>Ideabox</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <header class="main-header">
    <h1><a href="/">Idea Box</a></h1>
    </header>

    <div class="navbar">
      <!-- <a id="home" href="/"></a> -->
      <nav id="main_nav">
        <!-- <a id="home" href="/">Home</a> -->
        <% if current_user %>
          <div class="dropdown">
            <a class="dropbtn">My IdeaBox
              <i class="fa fa-caret-down"></i>
            </a>
            <div class="dropdown-content">
              <a href="/ideas/new">Create New Idea</a>
              <a href="/ideas">List All Ideas</a>
            </div>
          </div>
        <!-- If current_admin? then show other dropdowns -->
          <section class="admin">
            <%= image_tag 'person-1.png', :class => "admin-logo" %>
            <%= link_to "Logout", logout_path %>
            <!-- <a href="/logout">Logout</a> -->
          </section>
          <% else %>
          <section class="admin">
            <%= image_tag 'person-1.png', :class => "admin-logo" %>
            <%= link_to "Register New Account", new_user_path %>
            <%= image_tag 'person-1.png', :class => "admin-logo" %>
            <%= link_to "Login", login_path %>
            <!-- <a href="/login">Login</a> -->
          </section>
        <% end %>
        <!-- <div class="dropdown">
          <a class="dropbtn">
            <i class="fa fa-caret-down"></i>
          </a>
          <div> -->
            <!-- <a href="/categories/new">Create New Category</a>
            <a href="/categories">List All Categories</a> -->
          <!-- </div> -->
        </div>
      </nav>
    </div>
    <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, class: name %>
    <% end %>
    <%= yield %>
  </body>
</html>
